{% extends "template.twig" %}
{% block title %}Etudiants{% endblock %}
{% block content %}
            <!-- CONTENT HERE -->
            <form action="/students/edit/{{etudiant.getNoEtu()}}" method="POST">
                <div class="form-group">
                    <label for="no_etu"> Entrez le nom de l'étudiant:</label>
                    <input type="text" name="no_etu" id="no_etu" value="{{ etudiant.getNoEtu() }}" required class="form-control">
                    <small class="form-text text-muted">Type : 000-00-0000</small>
                </div>
                <div class="form-group">
                    <label for="email">
                        Choix nationalité : 
                                            
                    </label>
                    <select class="custom-select" id="nat" name="nat" value="{{etudiant.getNationalite() }}"/>
                        {% for country in countries %}
                            <option value="{{ country }}">
                                {{ country }}
                            </option>
                        {% endfor %}
                    </div>
                    <input type="submit" value="Modifier" class="btn btn-primary mt-4">
                </div>
            </form>
        <a href="/students"><button class="btn btn-danger">Annuler</button></a>
{% endblock %}                    